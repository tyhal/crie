{
  "$defs": {
    "Config": {
      "additionalProperties": false,
      "properties": {
        "ignore": {
          "description": "list of regexes matched against the file list to ignore them (exact paths also work)",
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "lint": {
          "$ref": "#/$defs/LintConfig",
          "description": "options for commands that lint"
        },
        "log": {
          "$ref": "#/$defs/LoggingConfig",
          "description": "logging options"
        }
      },
      "required": [
        "log",
        "lint",
        "ignore"
      ],
      "type": "object"
    },
    "LintConfig": {
      "additionalProperties": false,
      "properties": {
        "continue": {
          "type": "boolean"
        },
        "gitDiff": {
          "type": "boolean"
        },
        "gitTarget": {
          "type": "string"
        },
        "lang": {
          "type": "string"
        },
        "passes": {
          "type": "boolean"
        }
      },
      "required": [
        "continue",
        "passes",
        "gitTarget",
        "gitDiff",
        "lang"
      ],
      "type": "object"
    },
    "LoggingConfig": {
      "additionalProperties": false,
      "properties": {
        "json": {
          "description": "change format to json structured logging",
          "type": "boolean"
        },
        "quiet": {
          "description": "disable all output except for errors",
          "type": "boolean"
        },
        "trace": {
          "description": "(hidden opt) enable all logging (very very verbose)",
          "type": "boolean"
        },
        "verbose": {
          "description": "enable debug logging",
          "type": "boolean"
        }
      },
      "required": [
        "quiet",
        "verbose",
        "trace",
        "json"
      ],
      "type": "object"
    }
  },
  "$id": "https://github.com/tyhal/crie/cmd/crie/config/project/config",
  "$ref": "#/$defs/Config",
  "$schema": "https://json-schema.org/draft/2020-12/schema"
}