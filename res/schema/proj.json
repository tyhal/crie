{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/tyhal/crie/cmd/crie/config/project/config",
  "$ref": "#/$defs/Config",
  "$defs": {
    "Config": {
      "properties": {
        "log": {
          "$ref": "#/$defs/LoggingConfig",
          "description": "logging options"
        },
        "lint": {
          "$ref": "#/$defs/Options",
          "description": "options for commands that lint"
        },
        "ignore": {
          "items": {
            "type": "string"
          },
          "type": "array",
          "description": "list of regexes matched against the file list to ignore them (exact paths also work)"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "LoggingConfig": {
      "properties": {
        "quiet": {
          "type": "boolean",
          "description": "disable all output except for errors"
        },
        "verbose": {
          "type": "boolean",
          "description": "enable debug logging"
        },
        "trace": {
          "type": "boolean",
          "description": "(hidden opt) enable all logging (very very verbose)"
        },
        "json": {
          "type": "boolean",
          "description": "change format to json structured logging"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "Options": {
      "properties": {
        "continue": {
          "type": "boolean"
        },
        "passes": {
          "type": "boolean"
        },
        "gitTarget": {
          "type": "string"
        },
        "gitDiff": {
          "type": "boolean"
        },
        "only": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "continue",
        "passes",
        "gitTarget",
        "gitDiff",
        "only"
      ]
    }
  }
}
